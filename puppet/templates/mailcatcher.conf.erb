#!upstart
# mailcatcher - mock smtp server
#
# mailCatcher runs a super simple SMTP server which catches any
# message sent to it to display in a web interface.

description     "mailcatcher - mock smtp server"

start on runlevel [2345]
stop on shutdown

setuid vagrant
setgid vagrant

script
 exec nohup /usr/local/bin/mailcatcher --ip=0.0.0.0 -f  >> /var/log/mailcatcher/mailcatcher.log 2>&1
end script
